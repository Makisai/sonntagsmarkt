<%= simple_form_for vendor, html: { class: 'form-horizontal' } do |form| %>
  <% if vendor.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% vendor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="m-4">
    <%= form.input :name, input_html: { class: 'form-control' } %>
    <%= form.input :legalform, placeholder: I18n.t("vendor.form.placeholder.legalform"), input_html: { class: 'form-control' } %>
    <%= form.input :contact, input_html: { class: 'form-control' } %>
    <%= form.input :address, placeholder: I18n.t("vendor.form.placeholder.address"), input_html: { class: 'form-control' } %>
    <%= form.input :phone, input_html: { class: 'form-control' } %>
    <%= form.input :email, input_html: { class: 'form-control' } %>
    <%= form.input :taxnumber, input_html: { class: 'form-control' } %>
    <%= form.input :taxoffice, input_html: { class: 'form-control' } %>
    <%= form.input :last_visit, as: :string, placeholder: I18n.t("vendor.form.placeholder.last_visit"), input_html: { class: 'form-control' } %>
    <%= form.input :visit_day, as: :select, collection: Vendor::VISIT_DAYS.map { |day| t("vendor.visit_days.#{day}") }, include_blank: "Bitte auswÃ¤hlen", input_html: { class: 'form-control' } %>
    <div class="form-group">
      <%= form.button :submit, "Speichern", class: "btn btn-primary mt-3" %>
    </div>
  </div>
<% end %>
