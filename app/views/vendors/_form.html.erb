<%= simple_form_for vendor, html: { class: 'form-horizontal' } do |form| %>
  <% if vendor.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% vendor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="m-4">
    <%= form.input :name, input_html: { class: 'form-control' } %>
    <%= form.input :legalform, placeholder:'GmbH, GbR, etc.', input_html: { class: 'form-control' } %>
    <%= form.input :contact, input_html: { class: 'form-control' } %>
    <%= form.input :address, placeholder:'StarÃŸe, Hausnummer, PLZ und Ort', input_html: { class: 'form-control' } %>
    <%= form.input :phone, input_html: { class: 'form-control' } %>
    <%= form.input :email, input_html: { class: 'form-control' } %>
    <%= form.input :taxnumber, input_html: { class: 'form-control' } %>
    <%= form.input :taxoffice, input_html: { class: 'form-control' } %>
    <%= form.input :last_visit, as: :string, placeholder:'In welchem Jahr waren sie zuletzt Teilnehmende am Sonntagsmarkt zum Volksfest in Malchow?', input_html: { class: 'form-control' } %>
    <%= form.input :visit_day, placeholder: 'Besteht bei Ihnen auch ein Interesse am Samstag, zu verkaufen?', input_html: { class: 'form-control' } %>

    <div class="form-group">
      <%= form.button :submit, "Speichern", class: "btn btn-primary mt-3" %>
    </div>
  </div>
<% end %>
