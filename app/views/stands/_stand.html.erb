<% if stand.present? %>
  <div id="<%= dom_id stand %>" class="card m-3">
    <div class="card-body">
      <h5 class="card-title">Stand Details
        <span>
          <a href="<%= edit_stand_path(stand) %>" title="<%= I18n.t("stand.actions.edit")%>"> 
            <i class="bi bi-pencil"></i>
          </a>
        </span>
      </h5>
      <div class="row">
        <div class="col-md-6">
          <p><strong>Frontmeter:</strong> <%= stand.width %></p>
          <p><strong>Höhe:</strong> <%= stand.height %></p>
          <p><strong>Tiefe:</strong> <%= stand.depth %></p>
          <p><strong>Durchmesser:</strong> <%= stand.diameter %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Beschreibung:</strong> <%= stand.description %></p>
          <p><strong>Kühlwagen:</strong> <%= stand.cooler %></p>
          <p><strong>Tische/Schirme:</strong> <%= stand.table %></p>
          <p><strong>Selbstfahrer:</strong> <%= stand.selfdriver %></p>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-md-6">
          <p><strong>Anhänger:</strong> <%= stand.trailer %></p>
          <p><strong>Stromanschluss (230 V):</strong> <%= stand.power %></p>
          <p><strong>andere Besonderheiten:</strong> <%= stand.specials %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Sonstiges:</strong> <%= stand.misc %></p>
          <p><strong>Händler:</strong> <%= stand.vendor_id %></p>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="alert alert-warning">
    <p><%=I18n.t("stand.empty")%></p>
  </div>
<% end %>
